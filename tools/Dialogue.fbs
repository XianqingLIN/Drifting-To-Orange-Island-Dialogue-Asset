namespace Dialogue;

// 一条命令（等价于 Fungus 的一个 Command）
table Command {
  command_type:string;   // "Say", "If", "Menu", ...
  parameters:[string];   // 按顺序的参数列表
}

// 一个 Block（Fungus 的 Block）
table DialogueBlock {
  block_name:string;
  commands:[Command];
}

// 一个 Flowchart（Fungus 的 Flowchart）
table DialogueFlowchart {
  chart_name:string;
  blocks:[DialogueBlock];
}